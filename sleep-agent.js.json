// api/sleep-agent.js
export default async function handler(req, res) {
  if (req.method !== "POST") {
    return res.status(405).json({ error: "Kun POST understøttes" });
  }

  const { messages = [] } = req.body || {};

  try {
    const response = await fetch("https://api.openai.com/v1/chat/completions", {
      method: "POST",
      headers: {
        "Content-Type": "application/json",
        Authorization: `Bearer ${process.env.OPENAI_API_KEY}`,
      },
      body: JSON.stringify({
        model: "gpt-4o-mini",
        messages: [
          {
            role: "system",
            content:
              "Du er en empatisk dansk søvn-terapeut baseret på CBT-I principper. \
               Svar venligt, roligt og uden medicinråd."
          },
          ...messages,
        ],
        temperature: 0.7,
        max_tokens: 500,
      }),
    });

    const data = await response.json();
    const reply = data.choices?.[0]?.message?.content || "Der skete en fejl.";

    res.status(200).json({ content: reply });
  } catch (err) {
    console.error(err);
    res.status(500).json({ error: "Serverfejl" });
  }
}
